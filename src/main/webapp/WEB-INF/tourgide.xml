<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

<!-- create -->

     <servlet>
     	<servlet-name>createListServlet</servlet-name>
     	<servlet-class>tourlists.createListServlet</servlet-class>
     </servlet>
     
     <servlet-mapping>
     	<servlet-name>createListServlet</servlet-name>
     	<url-pattern>/createListServlet</url-pattern>
     </servlet-mapping>
     
     <!-- display -->

	<servlet>
     	<servlet-name>displayTourGuides</servlet-name>
     	<servlet-class>tourlists.displayTourGuides</servlet-class>
     </servlet>
     
     <servlet-mapping>
     	<servlet-name>displayTourGuides</servlet-name>
     	<url-pattern>/displayTourGuides</url-pattern>
     </servlet-mapping>
     
     <!-- update -->
     
     <servlet>
     	<servlet-name>updateTourList</servlet-name>
     	<servlet-class>tourlists.updateTourList</servlet-class>
     </servlet>
     
     <servlet-mapping>
     	<servlet-name>updateTourList</servlet-name>
     	<url-pattern>/updateTourList</url-pattern>
     </servlet-mapping>
     
     <!-- delete -->
     
     <servlet>
     	<servlet-name>deleteGuide</servlet-name>
     	<servlet-class>tourlists.deleteGuide</servlet-class>
     </servlet>
     
     <servlet-mapping>
     	<servlet-name>deleteGuide</servlet-name>
     	<url-pattern>/deleteGuide</url-pattern>
     </servlet-mapping>
     
     <!-- Administration System -->
     
     <!-- registration -->
     
     <servlet>
     	<servlet-name>admininsertServlet</servlet-name>
     	<servlet-class>adminList.admininsertServlet</servlet-class>
     </servlet>
     
     <servlet-mapping>
     	<servlet-name>admininsertServlet</servlet-name>
     	<url-pattern>/admininsertServlet</url-pattern>
     </servlet-mapping>
     
     <!-- login -->
     
     <servlet>
     	<servlet-name>adminLoginServlet</servlet-name>
     	<servlet-class>adminList.adminLoginServlet</servlet-class>
     </servlet>
     
     <servlet-mapping>
     	<servlet-name>adminLoginServlet</servlet-name>
     	<url-pattern>/adminLoginServlet</url-pattern>
     </servlet-mapping>
     
     <!-- User System -->
     
     <!-- register -->
     
     <servlet>
     	<servlet-name>AddUserServlet</servlet-name>
     	<servlet-class>ManageUsers.AddUserServlet</servlet-class>
     </servlet>
     
     <servlet-mapping>
     	<servlet-name>AddUserServlet</servlet-name>
     	<url-pattern>/AddUserServlet</url-pattern>
     </servlet-mapping>
     
     <!-- login -->
     
     
     <servlet>
     	<servlet-name>UserLoginServlet</servlet-name>
     	<servlet-class>ManageUsers.UserLoginServlet</servlet-class>
     </servlet>
     
     <servlet-mapping>
     	<servlet-name>UserLoginServlet</servlet-name>
     	<url-pattern>/UserLoginServlet</url-pattern>
     </servlet-mapping>
     
</web-app>